# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[*]
indent_style = tab

[*.{json,yml,yaml}]
indent_size = 2
indent_style = spaces

# Yes, trim trailing whitespace
trim_trailing_whitespace = true
